{
  "realm": "demo-ecommerce",
  "enabled": true,
  "displayName": "IAM Demo E-Commerce",

  "roles": {
    "realm": [
      { "name": "customer", "description": "Customer role" },
      { "name": "admin", "description": "Admin role" }
    ]
  },

  "users": [
    {
      "username": "demo-user",
      "enabled": true,
      "emailVerified": true,
      "firstName": "Demo",
      "lastName": "User",
      "email": "demo.user@example.com",
      "credentials": [
        { "type": "password", "value": "Demo@123", "temporary": false }
      ],
      "realmRoles": ["customer"]
    },
    {
      "username": "demo-admin",
      "enabled": true,
      "emailVerified": true,
      "firstName": "Demo",
      "lastName": "Admin",
      "email": "demo.admin@example.com",
      "credentials": [
        { "type": "password", "value": "Admin@123", "temporary": false }
      ],
      "realmRoles": ["admin"]
    }
  ],

  "clients": [
    {
      "clientId": "ecommerce-frontend",
      "protocol": "openid-connect",
      "publicClient": true,
      "directAccessGrantsEnabled": false,
      "standardFlowEnabled": true,
      "redirectUris": [
        "http://localhost:3000/*",
        "http://127.0.0.1:5500/*",
        "http://127.0.0.1:3000/*"
      ],
      "webOrigins": ["*"],
      "attributes": { "pkce.code.challenge.method": "S256" }
    }
  ]
}
